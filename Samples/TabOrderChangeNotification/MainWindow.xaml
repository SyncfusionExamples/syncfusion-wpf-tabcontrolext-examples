<Window x:Class="TabOrderChangeNotification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabOrderChangeNotification" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="TabControl - TabOrderChangeNotification" Height="450" Width="800">
    <Grid>
        <syncfusion:TabControlExt Margin="10"
                                  TabOrderChanging="TabControlExt_TabOrderChanging"
                                  TabOrderChanged="TabControlExt_TabOrderChanged"
                                  AllowDragDrop="True" >
            <syncfusion:TabItemExt Header="tabItem1" />
            <syncfusion:TabItemExt Header="tabItem2" />
            <syncfusion:TabItemExt Header="tabItem3" />
            <!--<syncfusion:TabItemExt Header="tabItem4" />
            <syncfusion:TabItemExt Header="tabItem5" />-->
        </syncfusion:TabControlExt>
    </Grid>
</Window>
